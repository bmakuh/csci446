- title "Log in"

%p== Want an account? #{link_to "Register!", signup_path}

- form_for @user_session do |f|
  = f.error_messages(:header_message => 'Login failed', :message => 'Sorry, please re-enter your credentials.')
  %p
    = f.label :username
    %br
    = f.text_field :username
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.submit "Login"
