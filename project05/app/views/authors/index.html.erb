<h1>Listing authors</h1>

<%= link_to 'New author', new_author_path %>
<br />

<%= will_paginate @authors %>
<table>
  <tr>
    <th>Name</th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%=h author.name %></td>
    <td class="icon"><%= link_to image_tag("show.png", :border=>0, :title=>"show"), author %></td>
            <td class="icon"><%= link_to image_tag("edit.png", :border=>0, :title=>"edit"), edit_author_path(author) %></td>
            <td class="icon"><%= link_to image_tag("destroy.png", :border=>0, :title=>"destroy"), author, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @authors %>
