<%= link_to 'Back', articles_path %>

<h1>Editing "<%=h @article.title %>"</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author_name %><br />
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :creation_date %><br />
    <%= f.date_select :creation_date %>
  </p>
  <p>
    <%= f.submit 'Save Changes' %>
  </p>
<% end %>